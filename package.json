{
  "license": "UNLICENSED",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "start": "ts-node --compiler ttypescript --project src/tsconfig.json src/app.ts",
    "start:watch": "ts-node-dev --compiler ttypescript --project src/tsconfig.json --respawn src/app.ts",
    "start:prod": "node .",
    "build": "ttsc --build src",
    "test": "jest",
    "lint": "eslint src test --ext ts",
    "lint:fix": "eslint src test --fix --ext ts"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm-run-all --parallel lint test build"
    }
  }
}
